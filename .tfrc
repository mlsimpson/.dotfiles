/set isize=1

/addworld -Tlp sloth slothmud.org 6101
/addworld -Tlp sdf mud.sdf.org 4000

/def -mregexp -t"^You are hungry\." = \
   /if ({sleeping} == 1) \
      /let wassleeping 1 %; \
      wake %; stand %; \
   /endif %; \
   /if ({reading} == 0) \
      eat food %; \
   /endif %; \
   /if ({wassleeping} == 1) \
      /let wassleeping 0 %; \
      sleep %; \
   /endif

/def -mregexp -t"^You are thirsty\." = \
   /if ({sleeping} == 1) \
      /let wassleeping 1 %; \
      wake %; stand %; \
   /endif %; \
   /if ({reading} == 0) \
      drink %drink %; drink %drink %; \
   /endif %; \
   /if ({wassleeping} == 1) \
      /let wassleeping 0 %; \
      sleep %; \
   /endif
